<div class="large-3 columns">
  <h4>Team Member</h4>
  <ul class="tmgt-container-member-btn-group" id="groups">
    <% @groups.each do|group| %>
        <%= render :partial=> 'groups/group', locals: {group: group} %>
    <% end %>
  </ul>

  <fieldset id='group_field'>
    <legend>Add new group</legend>
    <div id='new_group_form'>
      <%= form_for @group,remote: true do |f| %>
          <%= f.label :name %>
          <%= f.text_field :name %> <br>
          <%= f.submit 'create'%>
      <% end %>
    </div>
  </fieldset>
</div> <!-- end of large-3 columns -->






