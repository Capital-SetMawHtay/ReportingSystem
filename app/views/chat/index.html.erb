    <div class="large-9 columns" >
      <%= render partial: 'tabs',locals: {groups: @groups} %>
      <section class="tabs-content tmgt-container-section">

        <div class="content active" id="panel-1">
          <!-- chat message area 1 -->
            <div class="tmgt-chat-user-group">
            <img src="img/1.jpg" class="tip-bottom radius" alt="" data-tooltip data-options="disable_for_touch:true" title="Write Report">
            <img src="img/2.png" class="tip-bottom radius" alt="" data-tooltip data-options="disable_for_touch:true" title="Write Report">
            <img src="img/3.jpg" class="tip-bottom radius" alt="" data-tooltip data-options="disable_for_touch:true" title="Write Report">
          </div>
            <div class="tmgt-chat-box" id="custom-scrollbar">

            </div>  <!-- eo tmgt-chat-box #custom-scrollbar -->
        </div>
      </section>  <!-- eo tmgt-container-section -->
        <div class="row tmgt-chat-control">
          <%= form_for Message.new,remote: true do |f|%>
                <div class="large-9 columns">
                  <%= f.text_area :content,cols: '30',rows: '5',class: 'tmgt-container-textarea' %>
                  <%= f.hidden_field :group_id,value: ''%>
                </div>
                <div class="large-3 columns">
                <%= f.submit "Send",class: 'tmgt-btn-red' %>

                </div>
                </div>
            <%end%>
      <br><br><br><br><br><br><br>
    </div>  <!-- eo large-12 columns -->

    <div class="large-3 columns">
      <h4>Team Member</h4>
      <ul class="tmgt-container-member-btn-group" id="groups">
        <h4>Your groups</h4>
        <% @groups.each do|group| %>
            <%= render :partial=> 'groups/own_group', locals: {group: group} %>
        <% end %>
      </ul>

      <fieldset id='group_field'>
        <legend>Add new group</legend>
        <div id='new_group_form'>
          <%= form_for ([current_user,@group]),remote: true do |f| %>
              <%= f.label :name %>
              <%= f.text_field :name %> <br>
              <%= f.submit 'create'%>
          <% end %>
        </div>
      </fieldset>
    </div> <!-- end of large-3 columns -->






    <% if current_user then %>
        <%= subscribe_to "/messages/#{current_user.id}" %>
    <% end %>

    <%= subscribe_to '/messages/test' %>