<div id="plan_for_today">
  <h4>What you planned for today was:</h4>
  <%= @report.plan_for_today %>
</div>
<%= form_for([@report.user,@report],method: :put) do|f| %>
    <!-- Form url  -->
    <div class="row">
      <div class="large-6 columns">
        <section class="cm-report-edit-fields">
          <header class="tmgt-plan">Plan</header>
          <%= f.text_area :plan,class: 'tmgt-container-textarea' %>
        </section>
      </div>
      <div class="large-6 columns">
        <section class="cm-report-edit-fields">
          <header class="tmgt-problem">Problems</header>
          <%= f.text_area :problem,class: 'tmgt-container-textarea'%>
        </section>
      </div>
    </div>
    <div class="row">
      <div class="large-6 columns">
        <section class="cm-report-edit-fields">
          <header class="tmgt-exp">Experience</header>
          <%= f.text_area :experience,class: 'tmgt-container-textarea' %>
        </section>
      </div>
      <div class="large-6 columns">
        <section class="cm-report-edit-fields">
          <header class="tmgt-solution">Solution</header>
          <div>
            <%= f.text_area :solution,class: 'tmgt-container-textarea'%>
          </div>
        </section>
      </div>
    </div>
    <br/><br/>
      <div class="row">

        <div class="large-12 tmgt-right-btn-group">
          <%= f.submit 'Write and Preview',class: 'button radius'%>
        </div>
      </div>
    <!-- eo form -->
<% end %>