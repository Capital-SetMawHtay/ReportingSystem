<div id="reports">
  <% unless reports.empty? %>
      <% reports.each do |report| %>
          <div id='<%= dom_id(report)%>'>
            <%= report.user.name %>
            <%= report.report_date %>
            <%= report.status %>
            <%= link_to "View Detail",member_report_path(report) %>
            <%= link_to "Edit",edit_member_report_path(report) %>
            <%= form_for(report,url: submit_member_report_path(report),method: :put) do |f| %>

               <%= f.submit 'Submit Report' %>
            <%end %>
          </div>
      <% end %>
  <% else %>
      You have not generated reports for this week yet.
      <%= form_tag(member_reports_path) do %>
         <%= submit_tag 'Generate Now' %>
      <%end%>

  <%end%>
</div>