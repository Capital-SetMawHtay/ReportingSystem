<h1>Reports</h1>
<div id="reports">
<% @reports.each do |team,reports| %>
    <div id="<%= team %>">
      <h2><%= team %></h2>
    <%reports.each do|report| %>
    <div id='<%= dom_id(report)%>'>

      <%= report.user.email %>
      <%= report.report_date %>
      <%= report.status %>
      <%= link_to "View Detail",user_report_path(report.user,report) %>
      <%= link_to "Edit",edit_user_report_path(report.user,report) %>
    </div>
    <% end %>
    </div>
<% end %>
</div>