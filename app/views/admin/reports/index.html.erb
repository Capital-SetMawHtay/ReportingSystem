<section  id="reports" class="tabs-content tmgt-container-section cm-tab-container">

<div class="row">
  <div class="large-2 columns tmgt-btn-budge-style1">
    <h5>Today Reports</h5>
  </div>

</div>


<dl class="tabs" data-tab id="chatbox-tab-switcher">
  <% @reports.each do|team,reports| %>
    <dd >
      <a href="#panel-<%= team.split().flatten.join %>"><%= team %><%= render partial: 'layouts/common/submitted_report_count',locals: {team_name: team,submitted_reports: reports} %></a>

    </dd>
  <% end %>
</dl>
<% @reports.each do |team,reports| %>
    <div class="content cm-tab-container cm-row-margin-remove" id="panel-<%= team.split.flatten.join %>">
      <ul class="cm-listview">
        <li class="row tmgt-view-report-page cm-listheader">
              <div class="large-2 columns">
                Name
              </div>
              <div class="large-2 columns">
                Date
              </div>
              <div class="large-2 columns">
                Status
              </div>
              <div class="large-5 columns">
                Actions
              </div>
        </li> <!-- eo rows -->
        <br/>
        <% reports.each do |report| %>
            <%= render partial:'admin/reports/report',locals: {report: report} %>
        <% end %>
      </ul>
    </div>
<% end %>
</section>


<div id="download_link_container">

  <%= button_to 'Zip Today Reports',admin_make_zip_path,method: :post,class: 'button success',remote: true %>
</div>
